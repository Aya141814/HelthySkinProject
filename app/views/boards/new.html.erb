<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h1 class="mb-4">新規投稿</h1>

            <%= form_with model: @board, local: true, class: "new_board" do |f| %>
            <div class="mb-3">
                <%= f.label :title, class: "form-label" %>
                <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
            </div>

            <div class="mb-3">
                <%= f.label :skincare_types, 'スキンケアの種類', class: "form-label" %>
                <div class="skincare-types-container">
                    <%= f.collection_check_boxes :skincare_type_ids, @skincare_types, :id, :name do |b| %>
                    <div class="form-check">
                        <%= b.check_box class: "form-check-input" %>
                        <%= b.label class: "form-check-label" %>
                    </div>
                    <% end %>
                </div>
            </div>

            <div class="mb-3">
                <%= f.label :body, class: "form-label" %>
                <%= f.text_area :body, class: "form-control", rows: "10", placeholder: "本文を入力してください" %>
            </div>

            <div class="text-center">
                <%= f.submit "投稿する", class: "btn btn-primary btn-lg" %>
            </div>
            <% end %>
        </div>
    </div>
</div>