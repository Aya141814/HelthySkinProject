<div class="w-full px-4 mb-8">
    <div id="board-id-<%= board.id %>">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <%= image_tag "board_placeholder.png", class: "w-full h-48 object-cover", width: "300", height:"200" %>
            <div class="p-4">
                <div class="flex items-center justify-between">
                    <h4 class="text-xl font-semibold">
                        <%= link_to board.title, '#', class: "text-blue-600 hover:text-blue-800" %>
                    </h4>
                    <div class="flex space-x-2">
                        <%= link_to '#', id: "button-edit-#{board.id}", class: "text-gray-600 hover:text-gray-800" do %>
                        <i class="bi bi-pencil-fill"></i>
                        <% end %>
                        <%= link_to '#', id: "button-delete-#{board.id}", method: :delete, data: {confirm: ''}, class: "text-gray-600 hover:text-gray-800" do %>
                        <i class="bi bi-trash-fill"></i>
                        <% end %>
                    </div>
                </div>
                <ul class="flex space-x-4 mt-2 text-sm text-gray-600">
                    <li class="flex items-center"><i class="bi bi-person mr-1"></i><%= board.user.decorate.full_name %>
                    </li>
                    <li class="flex items-center"><i
                            class="bi bi-calendar mr-1"></i><%= l board.created_at, format: :short %></li>
                </ul>
                <p class="mt-2 text-gray-700"><%=board.body%></p>
            </div>
        </div>
    </div>
</div>