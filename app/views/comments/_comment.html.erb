<tr id="comment-<%= comment.id %>" class="border-b hover:bg-gray-50">
    <td class="py-4 pl-4 pr-2 align-top" style="width: 60px">
        <%= image_tag "sample", width: "50", height: "50", class: "rounded-full" %>
    </td>
    <td class="py-4 px-2">
        <div class="flex justify-between items-start">
            <div>
                <h3 class="text-sm font-semibold text-gray-900"><%= comment.user.decorate.full_name %></h3>
                <p class="mt-1 text-sm text-gray-700"><%= simple_format(comment.body) %></p>
            </div>
            <% if current_user.own?(comment) %>
            <div class="flex space-x-2">
                <%= link_to "#", class: "edit-comment-link text-blue-500 hover:text-blue-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path
                        d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                <% end %>
                <%= link_to "#", class: "delete-comment-link text-red-500 hover:text-red-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                        clip-rule="evenodd" />
                </svg>
                <% end %>
            </div>
            <% end %>
        </div>
    </td>
</tr>