<div class="container mx-auto px-4 bg-custom-white min-h-screen">
    <div class="max-w-2xl mx-auto ">
        <h1 class="text-3xl font-bold mb-8 text-center">ログイン</h1>

        <%= form_with url: login_path, class: "space-y-6" do |f| %>
        <div>
            <%= f.label :email, 
            class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
            <%= f.label :password, 
            class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="flex items-center justify-center">
            <%= f.submit "ログイン", 
            class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
        <% end %>

        <div class="mt-6 space-y-2 text-center">
            <%= link_to '登録ページへ',new_user_path, class: "block text-sm text-indigo-600 hover:text-indigo-500" %>

            <%= link_to 'パスワードをお忘れの方はこちら', 
          '#', 
          class: "block text-sm text-indigo-600 hover:text-indigo-500" %>
        </div>
    </div>
</div>